<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:color="?attr/colorDialogSurfacePressed"
                android:width="2dp" />
            <corners android:radius="10dp" />
            <solid android:color="@color/transparent_little_black" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:color="?attr/colorDialogSurface"
                android:width="2dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</selector>