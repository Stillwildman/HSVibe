<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="item"
            type="com.hsvibe.model.items.ItemAccountBonus.ContentData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_size_l"
        android:layout_marginEnd="@dimen/padding_size_l"
        android:layout_marginTop="@dimen/padding_size_m"
        android:layout_marginBottom="@dimen/padding_size_m"
        android:padding="@dimen/padding_size_xl"
        android:background="@drawable/background_main_gradient_corner_15dp">

        <TextView
            android:id="@+id/text_bonusDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_size_l"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/font_text_size_s"
            android:text="@{item.getDesc()}"
            tools:text="0000000000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_bonusPoint"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_remainingBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_s"
            android:textColor="@color/md_grey_400"
            android:textSize="@dimen/font_text_size_s"
            android:text="@{@string/remaining_points(item.getBalanceInt())}"
            tools:text="@string/remaining_points"
            app:layout_constraintStart_toStartOf="@+id/text_bonusDesc"
            app:layout_constraintEnd_toEndOf="@+id/text_bonusDesc"
            app:layout_constraintTop_toBottomOf="@+id/text_bonusDesc" />

        <TextView
            android:id="@+id/text_bonusDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_l"
            android:textColor="@color/highlight_text_color"
            android:textSize="@dimen/font_text_size_s"
            android:text="@{item.updated_at}"
            tools:text="0000000000000"
            app:layout_constraintStart_toStartOf="@+id/text_bonusDesc"
            app:layout_constraintEnd_toEndOf="@+id/text_bonusDesc"
            app:layout_constraintTop_toBottomOf="@+id/text_remainingBalance" />

        <TextView
            android:id="@+id/text_bonusPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_size_s"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/font_text_size_s"
            android:text="@{item.getPointText()}"
            tools:text="100"
            app:layout_constraintEnd_toStartOf="@+id/text_point"
            app:layout_constraintTop_toTopOf="@+id/text_point"
            app:layout_constraintBottom_toBottomOf="@+id/text_point"/>

        <TextView
            android:id="@+id/text_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/font_text_size_s"
            android:text="@string/point"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>