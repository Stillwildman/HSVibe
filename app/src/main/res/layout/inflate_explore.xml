<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="content"
            type="com.hsvibe.model.items.ItemContent.ContentData" />

        <variable
            name="callback"
            type="com.hsvibe.callbacks.OnContentDataClickCallback" />

    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding_size_l"
        android:layout_marginEnd="@dimen/padding_size_l"
        android:layout_marginTop="@dimen/padding_size_s"
        android:layout_marginBottom="@dimen/padding_size_xxl"
        android:background="?selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/transparent_full"
        android:onClick="@{() -> callback.onContentDataClick(content)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_explorePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:glideImage="@{content.getOriginalUrl()}"/>

            <View
                android:id="@+id/view_gradientBackground"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/background_explore_gradient"
                app:layout_constraintTop_toTopOf="@+id/text_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_size_xxl"
                android:layout_marginEnd="@dimen/padding_size_xxl"
                android:layout_marginBottom="@dimen/padding_size_l"
                tools:text="HS APP全新改版"
                android:textSize="@dimen/font_text_size_m"
                android:textColor="@color/md_white_1000"
                android:text="@{content.title}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/view_divider"/>

            <View
                android:id="@+id/view_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_size_l"
                android:background="@color/md_white_1000"
                app:layout_constraintStart_toStartOf="@+id/text_title"
                app:layout_constraintEnd_toEndOf="@+id/text_title"
                app:layout_constraintBottom_toTopOf="@+id/text_content"/>

            <TextView
                android:id="@+id/text_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_size_xl"
                tools:text="00000000000000000"
                android:textSize="@dimen/font_text_size_s"
                android:textColor="@color/md_white_1000"
                android:text="@{content.content}"
                android:autoLink="all"
                app:layout_constraintStart_toStartOf="@+id/text_title"
                app:layout_constraintEnd_toEndOf="@+id/text_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>