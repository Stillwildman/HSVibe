<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background_color">

        <TextView
            android:id="@+id/text_qrCodeScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_xxl"
            android:text="@string/qr_code_scan"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/font_text_size_m"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/button_myQrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_size_l"
            android:paddingEnd="@dimen/padding_size_l"
            android:paddingTop="@dimen/padding_size_s"
            android:paddingBottom="@dimen/padding_size_s"
            android:layout_marginEnd="@dimen/padding_size_xl"
            android:text="@string/my_qr_code"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/font_text_size_s"
            android:background="@drawable/background_green_button_corner_10dp"
            app:layout_constraintTop_toTopOf="@+id/text_qrCodeScan"
            app:layout_constraintBottom_toBottomOf="@+id/text_qrCodeScan"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>

        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/scannerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_size_xxl"
            app:autoFocusButtonColor="@android:color/white"
            app:autoFocusButtonVisible="true"
            app:flashButtonColor="@android:color/white"
            app:flashButtonVisible="true"
            app:frameAspectRatioHeight="1"
            app:frameAspectRatioWidth="1"
            app:frameColor="@android:color/white"
            app:frameCornersSize="60dp"
            app:frameSize="0.75"
            app:frameThickness="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_qrCodeScan"
            app:layout_constraintDimensionRatio="1:1"
            app:maskColor="@android:color/transparent" />

        <TextView
            android:id="@+id/text_lightHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_size_xxl"
            android:text="@string/please_move_camera_closer_to_qr_code"
            android:textColor="@color/md_grey_500"
            android:textSize="@dimen/font_text_size_s"
            app:layout_constraintTop_toBottomOf="@+id/scannerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button_close"
            android:layout_width="@dimen/icon_common_size"
            android:layout_height="@dimen/icon_common_size"
            app:srcCompat="@drawable/selector_cancel"
            app:layout_constraintTop_toBottomOf="@+id/text_lightHint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>