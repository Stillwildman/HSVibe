<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="index"
            type="Integer" />

        <variable
            name="viewModel"
            type="com.hsvibe.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_size_xl"
        android:layout_marginEnd="@dimen/padding_size_xl"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        app:singleClick="@{() -> viewModel.onNewsClick(index)}">

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_newsCard"
            android:layout_width="@dimen/poi_photo_edit_view_xl"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="5:3"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/transparent_full">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:glideImage="@{viewModel.getContentData(index).thumbnailUrl}"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_newsTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/actionbar_item_height"
            android:layout_marginTop="@dimen/padding_size_xl"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="000000000000000000000000"
            android:textSize="@dimen/font_text_size_s"
            android:text="@{viewModel.getContentData(index).title}"
            app:layout_constraintStart_toStartOf="@+id/layout_newsCard"
            app:layout_constraintEnd_toEndOf="@+id/layout_newsCard"
            app:layout_constraintTop_toBottomOf="@+id/layout_newsCard"/>

        <TextView
            android:id="@+id/text_newsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_xl"
            tools:text="0000000000000000"
            android:textSize="@dimen/font_text_size_xs"
            android:textColor="@color/md_grey_500"
            android:text="@{viewModel.getContentData(index).approval_at}"
            app:layout_constraintStart_toStartOf="@+id/layout_newsCard"
            app:layout_constraintTop_toBottomOf="@+id/text_newsTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>