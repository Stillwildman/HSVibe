<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/background_main_gradient"
        android:padding="@dimen/padding_size_xl">

        <TextView
            android:id="@+id/text_enterPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_six_figures_passcode"
            android:textSize="@dimen/font_text_size_m"
            android:textColor="@color/md_white_1000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/edit_password_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_xxl"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@+id/text_enterPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_2"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <EditText
            android:id="@+id/edit_password_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_1"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_3" />

        <EditText
            android:id="@+id/edit_password_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_3"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_2"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_4"/>

        <EditText
            android:id="@+id/edit_password_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_4"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_3"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_5"/>

        <EditText
            android:id="@+id/edit_password_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_5"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_4"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_6"/>

        <EditText
            android:id="@+id/edit_password_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_6"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_5"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/text_confirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_the_passcode"
            android:textSize="@dimen/font_text_size_m"
            android:textColor="@color/md_white_1000"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_password_1"
            app:layout_constraintBottom_toTopOf="@+id/button_confirm"
            app:layout_constraintVertical_bias="0.1"/>

        <EditText
            android:id="@+id/edit_password_2_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_xxl"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_2_1"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@+id/text_confirmPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_2_2"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <EditText
            android:id="@+id/edit_password_2_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_2_2"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_2_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_2_1"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_2_3" />

        <EditText
            android:id="@+id/edit_password_2_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_2_3"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_2_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_2_2"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_2_4"/>

        <EditText
            android:id="@+id/edit_password_2_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_2_4"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_2_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_2_3"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_2_5"/>

        <EditText
            android:id="@+id/edit_password_2_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_2_5"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_2_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_2_4"
            app:layout_constraintEnd_toStartOf="@+id/edit_password_2_6"/>

        <EditText
            android:id="@+id/edit_password_2_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            android:textSize="@dimen/font_text_size_xxl"
            tools:text="1"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/background_edit_text_white"
            android:importantForAutofill="no"
            android:labelFor="@id/edit_password_2_6"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@+id/edit_password_2_1"
            app:layout_constraintStart_toEndOf="@+id/edit_password_2_5"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textColor="@color/md_grey_900"
            android:textSize="@dimen/font_text_size_s"
            android:background="@drawable/background_main_theme_button"
            android:enabled="false"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/edit_password_2_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.8"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>