<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View" />

        <variable
            name="detail"
            type="com.hsvibe.model.items.ItemCardList.CardData.CardDetail"/>

        <variable
            name="isSelected"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/padding_size_l"
            android:layout_marginEnd="@dimen/padding_size_l"
            android:layout_marginTop="@dimen/padding_size_m"
            android:layout_marginBottom="@dimen/padding_size_m"
            app:cardBackgroundColor="@color/md_white_1000"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="5:3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_cardSelection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_size_xl"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_creditCardBrand"
                    android:layout_width="@dimen/icon_common_size_xl"
                    android:layout_height="@dimen/font_text_size_xxl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setImageByRes="@{detail.getBrandIconRes()}"
                    tools:srcCompat="@drawable/ic_credit_card_mastercard" />

                <TextView
                    android:id="@+id/text_cardIssuer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:textSize="@dimen/font_text_size_m"
                    android:textColor="@color/md_grey_800"
                    android:text="@{detail.issuer}"
                    app:layout_constraintStart_toEndOf="@+id/image_creditCardBrand"
                    app:layout_constraintEnd_toStartOf="@+id/image_check"
                    app:layout_constraintTop_toTopOf="@+id/image_creditCardBrand"
                    app:layout_constraintBottom_toBottomOf="@+id/image_creditCardBrand"
                    tools:text="玉山商業銀行" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_check"
                    android:layout_width="@dimen/font_text_size_xl"
                    android:layout_height="@dimen/font_text_size_xl"
                    app:selected="@{isSelected}"
                    app:srcCompat="@drawable/selector_circular_check"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_size_xl"
                    android:textSize="@dimen/font_text_size_s"
                    android:textColor="@color/md_grey_700"
                    android:text="@string/is_default"
                    android:visibility="@{detail.isDefault ? View.VISIBLE : View.GONE, default = gone}"
                    tools:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_cardNumber"
                    app:layout_constraintBottom_toBottomOf="@+id/text_cardNumber" />

                <TextView
                    android:id="@+id/text_cardNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_size_l"
                    android:textColor="@color/md_grey_700"
                    android:textSize="@dimen/font_text_size_s"
                    android:text="@{detail.getDisplayNumber()}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/text_default"
                    app:layout_constraintTop_toBottomOf="@+id/image_creditCardBrand"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.9"
                    tools:text="5589-3666-xxxx-xx61"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>