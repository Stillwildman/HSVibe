<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="coupon"
            type="com.hsvibe.model.items.ItemMyCoupon.ContentData" />

        <variable
            name="itemClickCallback"
            type="com.hsvibe.callbacks.OnAnyItemClickCallback" />

        <variable
            name="barcodeText"
            type="String" />

        <import type="android.view.View" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_100">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_full"
            android:theme="@style/AppTheme.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/transparent_full">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_couponPic"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="fitCenter"
                        tools:background="@color/md_grey_700"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintDimensionRatio="3:2"
                        app:glideImage="@{coupon.getMediumUrl()}"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/padding_size_xl"
                android:paddingBottom="@dimen/padding_size_xl" >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_brandPic"
                    android:layout_width="@dimen/menu_land_icon"
                    android:layout_height="@dimen/menu_land_icon"
                    android:layout_marginStart="@dimen/padding_size_l"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:glideImageWithDefaultAppIcon="@{coupon.brand_thumb}"
                    tools:srcCompat="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/text_couponTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_xl"
                    tools:text="000000000000000000000000"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_800"
                    android:textSize="@dimen/font_text_size_m"
                    android:text="@{coupon.title}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/image_brandPic"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/text_couponSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="000000000000000000000000"
                    android:textColor="@color/md_grey_700"
                    android:textSize="@dimen/font_text_size_s"
                    android:text="@{coupon.subtitle}"
                    android:layout_marginTop="@dimen/padding_size_s"
                    app:layout_constraintTop_toBottomOf="@+id/text_couponTitle"
                    app:layout_constraintStart_toStartOf="@+id/text_couponTitle"
                    app:layout_constraintEnd_toEndOf="@+id/text_couponTitle" />

                <TextView
                    android:id="@+id/text_expiredDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="@string/expires_at"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_400"
                    android:textSize="@dimen/font_text_size_s"
                    android:text="@{@string/expires_at(coupon.expire_at)}"
                    android:layout_marginTop="@dimen/padding_size_l"
                    app:layout_constraintTop_toBottomOf="@+id/text_couponSubtitle"
                    app:layout_constraintStart_toStartOf="@+id/text_couponTitle"
                    app:layout_constraintEnd_toEndOf="@+id/text_couponTitle" />

                <TextView
                    android:id="@+id/text_couponPointIcon"
                    android:layout_width="@dimen/font_text_size_m"
                    android:layout_height="@dimen/font_text_size_m"
                    android:layout_marginTop="@dimen/padding_size_l"
                    android:layout_marginEnd="@dimen/padding_size_s"
                    style="@style/Widget.AppCompat.Button"
                    android:gravity="center"
                    android:text="P"
                    android:textSize="@dimen/font_text_size_xs"
                    android:background="@drawable/background_round_point"
                    app:layout_constraintStart_toStartOf="@+id/text_couponTitle"
                    app:layout_constraintTop_toBottomOf="@id/text_expiredDate" />

                <TextView
                    android:id="@+id/text_couponPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_size_m"
                    tools:text="100 é»ž"
                    android:textSize="@dimen/font_text_size_s"
                    android:textColor="@color/md_grey_900"
                    android:text="@{@string/point_has_int(coupon.point)}"
                    app:layout_constraintStart_toEndOf="@+id/text_couponPointIcon"
                    app:layout_constraintTop_toTopOf="@id/text_couponPointIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/text_couponPointIcon"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_use"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_size_xxl"
                    android:text="@string/use"
                    android:textSize="@dimen/font_text_size_s"
                    android:textColor="@color/md_white_1000"
                    android:background="@drawable/background_pink_button_corner_10dp"
                    android:visibility="@{barcodeText == null ? View.VISIBLE : View.GONE, default=visible}"
                    app:layout_constraintStart_toStartOf="@+id/image_brandPic"
                    app:layout_constraintEnd_toEndOf="@+id/text_couponTitle"
                    app:layout_constraintTop_toBottomOf="@+id/text_couponPointIcon"
                    app:singleClick="@{() -> itemClickCallback.onItemClick(coupon.uuid)}"
                    android:elevation="0dp"/>

                <ProgressBar
                    android:id="@+id/barcodeLoadingCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarPadding"
                    android:padding="@dimen/padding_size_xl"
                    android:background="@drawable/background_corner_black_transparent_20dp"
                    app:layout_constraintTop_toTopOf="@+id/button_use"
                    app:layout_constraintBottom_toBottomOf="@+id/button_use"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:elevation="10dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_barcode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/actionbar_height_more_higher"
                    android:layout_marginTop="@dimen/padding_size_xl"
                    app:layout_constraintStart_toStartOf="@+id/image_brandPic"
                    app:layout_constraintEnd_toEndOf="@+id/text_couponTitle"
                    app:layout_constraintTop_toBottomOf="@+id/text_couponPointIcon"
                    android:visibility="gone"
                    app:createBarcode="@{barcodeText}"/>

                <TextView
                    android:id="@+id/text_barcodeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_size_s"
                    android:gravity="center"
                    android:text="@{barcodeText}"
                    android:textSize="@dimen/font_text_size_s"
                    android:textColor="@color/md_grey_500"
                    android:visibility="@{barcodeText == null ? View.GONE : View.VISIBLE, default=gone}"
                    tools:text="123456789"
                    app:layout_constraintTop_toBottomOf="@+id/image_barcode"
                    app:layout_constraintStart_toStartOf="@+id/image_barcode"
                    app:layout_constraintEnd_toEndOf="@+id/image_barcode" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="button_use,text_barcodeText" />

                <View
                    android:id="@+id/view_background"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/padding_size_xl"
                    android:layout_marginEnd="@dimen/padding_size_xl"
                    android:layout_marginTop="@dimen/padding_size_xl"
                    android:background="@drawable/background_corner_grey_10dp"
                    app:layout_constraintTop_toBottomOf="@+id/barrier"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/text_expiredBrief"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="000000000000000"
                    android:textColor="@color/md_grey_700"
                    android:textSize="@dimen/font_text_size_s"
                    android:text="@{coupon.brief}"
                    android:layout_marginStart="@dimen/padding_size_xl"
                    android:layout_marginEnd="@dimen/padding_size_xl"
                    android:layout_marginTop="@dimen/padding_size_l"
                    app:layout_constraintTop_toTopOf="@+id/view_background"
                    app:layout_constraintStart_toStartOf="@+id/view_background"
                    app:layout_constraintEnd_toEndOf="@+id/view_background" />

                <TextView
                    android:id="@+id/text_couponContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="000000000000000\n000000000000000\n000000000000000\n000000000000000"
                    android:textColor="@color/md_grey_700"
                    android:textSize="@dimen/font_text_size_s"
                    android:text="@{coupon.content}"
                    android:layout_marginTop="@dimen/padding_size_m"
                    android:layout_marginBottom="@dimen/padding_size_l"
                    app:layout_constraintTop_toBottomOf="@+id/text_expiredBrief"
                    app:layout_constraintBottom_toBottomOf="@+id/view_background"
                    app:layout_constraintStart_toStartOf="@+id/text_expiredBrief"
                    app:layout_constraintEnd_toEndOf="@+id/text_expiredBrief" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>