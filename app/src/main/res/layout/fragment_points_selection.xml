<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="totalPoints"
            type="String" />

        <variable
            name="selectedPoints"
            type="String" />

    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding_size_xl"
        android:layout_marginEnd="@dimen/padding_size_xl"
        android:layout_marginTop="@dimen/padding_size_xxl"
        android:layout_marginBottom="@dimen/padding_size_xxl"
        app:cardBackgroundColor="@color/md_white_1000"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_availablePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/available_points"
                android:textSize="@dimen/font_text_size_s"
                android:textColor="@color/md_grey_700"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.12"
                app:layout_constraintHorizontal_bias="0.85" />

            <TextView
                android:id="@+id/text_pointIcon"
                android:layout_width="@dimen/font_text_size_xl"
                android:layout_height="@dimen/font_text_size_xl"
                android:layout_marginEnd="@dimen/padding_size_l"
                android:gravity="center"
                style="@style/Widget.AppCompat.Button"
                android:text="P"
                android:textSize="@dimen/font_text_size_s"
                android:textColor="@color/md_white_1000"
                android:background="@drawable/background_round_point"
                app:layout_constraintTop_toTopOf="@+id/text_points"
                app:layout_constraintBottom_toBottomOf="@+id/text_points"
                app:layout_constraintEnd_toStartOf="@+id/text_points"/>

            <TextView
                android:id="@+id/text_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_size_l"
                android:textSize="@dimen/font_text_size_l"
                android:textColor="@color/md_grey_700"
                android:textStyle="bold"
                android:text="@{@string/point_has_string(totalPoints)}"
                tools:text="12,345 點"
                app:layout_constraintTop_toBottomOf="@+id/text_availablePoints"
                app:layout_constraintEnd_toEndOf="@+id/text_availablePoints" />

            <View
                android:id="@+id/view_background"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/padding_size_xxl"
                android:background="@color/md_grey_200"
                app:layout_constraintTop_toBottomOf="@+id/text_points"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/text_usingPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/using_points"
                android:textSize="@dimen/font_text_size_s"
                android:textColor="@color/md_grey_700"
                app:layout_constraintTop_toTopOf="@+id/view_background"
                app:layout_constraintBottom_toBottomOf="@+id/view_background"
                app:layout_constraintEnd_toEndOf="@+id/text_availablePoints"
                app:layout_constraintVertical_bias="0.05" />

            <LinearLayout
                android:id="@+id/layout_pointSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_size_xl"
                android:orientation="horizontal"
                android:background="@drawable/background_corner_grey_20dp"
                app:layout_constraintTop_toTopOf="@+id/edit_pointInput"
                app:layout_constraintBottom_toBottomOf="@+id/edit_pointInput"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/button_minus"
                    android:layout_width="@dimen/icon_common_size_xl"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_size_l"
                    android:paddingBottom="@dimen/padding_size_l"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    app:srcCompat="@drawable/ic_minus_grey" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding_size_l"
                    android:layout_marginBottom="@dimen/padding_size_l"
                    android:background="@color/md_grey_400" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/button_plus"
                    android:layout_width="@dimen/icon_common_size_xl"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_size_l"
                    android:paddingBottom="@dimen/padding_size_l"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    app:srcCompat="@drawable/ic_plus_grey" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_pointInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_size_xl"
                android:layout_marginTop="@dimen/padding_size_xl"
                android:paddingTop="@dimen/padding_size_l"
                android:paddingBottom="@dimen/padding_size_l"
                android:paddingStart="@dimen/padding_size_m"
                android:paddingEnd="@dimen/padding_size_m"
                android:textColor="@color/md_grey_900"
                android:textSize="@dimen/font_text_size_l"
                android:textColorHint="@color/md_grey_400"
                android:text="@{!selectedPoints.isEmpty() ? selectedPoints : null}"
                android:hint="0"
                android:inputType="numberDecimal"
                android:digits="0123456789"
                android:singleLine="true"
                android:gravity="center_vertical|end"
                android:textAlignment="textEnd"
                android:background="@drawable/background_corner_white_10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_usingPoints"
                app:layout_constraintStart_toEndOf="@+id/layout_pointSelector"
                app:layout_constraintEnd_toEndOf="@+id/text_availablePoints"/>

            <TextView
                android:id="@+id/text_discountHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_size_l"
                android:text="@string/point_discount_hint"
                android:textSize="@dimen/font_text_size_xs"
                android:textColor="@color/md_grey_400"
                app:layout_constraintTop_toBottomOf="@+id/edit_pointInput"
                app:layout_constraintEnd_toEndOf="@+id/text_availablePoints" />

            <TextView
                android:id="@+id/text_discountAmount"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/padding_size_xl"
                android:gravity="bottom"
                android:text="@string/discount_amount"
                android:textSize="@dimen/font_text_size_s"
                android:textColor="@color/md_grey_700"
                app:layout_constraintTop_toBottomOf="@+id/text_discountHint"
                app:layout_constraintBottom_toTopOf="@+id/view_divider"
                app:layout_constraintEnd_toEndOf="@+id/text_availablePoints" />

            <View
                android:id="@+id/view_divider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginBottom="@dimen/padding_size_xl"
                android:background="@color/md_grey_400"
                app:layout_constraintStart_toStartOf="@+id/button_confirm"
                app:layout_constraintEnd_toEndOf="@+id/text_availablePoints"
                app:layout_constraintBottom_toTopOf="@+id/text_dollars"/>

            <TextView
                android:id="@+id/text_dollars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_size_l"
                android:textSize="@dimen/font_text_size_s"
                android:textColor="@color/md_grey_700"
                android:textStyle="bold"
                android:text="@{@string/dollar_is(selectedPoints ?? `0`)}"
                tools:text="10 元"
                app:layout_constraintTop_toBottomOf="@+id/text_discountHint"
                app:layout_constraintBottom_toTopOf="@+id/button_confirm"
                app:layout_constraintEnd_toEndOf="@+id/text_availablePoints"
                app:layout_constraintVertical_bias="0.8"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_size_xxl"
                android:layout_marginEnd="@dimen/padding_size_xxl"
                android:textSize="@dimen/font_text_size_s"
                android:textColor="@color/md_grey_700"
                android:text="@string/confirm"
                android:background="@drawable/background_main_theme_button"
                app:layout_constraintTop_toTopOf="@+id/view_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.9"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>