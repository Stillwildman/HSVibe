<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="onItemClickCallback"
            type="com.hsvibe.callbacks.OnAnyItemClickCallback" />

        <variable
            name="iconRes"
            type="Integer" />

        <variable
            name="iconText"
            type="String" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_size_l"
        android:paddingEnd="@dimen/padding_size_l"
        android:paddingTop="@dimen/padding_size_xl"
        android:paddingBottom="@dimen/padding_size_xl"
        android:gravity="center"
        android:background="?selectableItemBackground"
        app:singleClick="@{() -> onItemClickCallback.onItemClick(iconRes)}">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_walletMenuIcon"
            android:layout_width="@dimen/font_text_size_xxl"
            android:layout_height="@dimen/font_text_size_xxl"
            app:setImageByRes="@{iconRes}"/>

        <TextView
            android:id="@+id/text_walletMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_size_l"
            android:textSize="@dimen/font_text_size_xs"
            android:textColor="@color/md_grey_800"
            android:text="@{iconText}"
            tools:text="@string/my_qr_code" />

    </LinearLayout>

</layout>
