<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background_color"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/text_hs_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/padding_size_l"
            android:paddingBottom="@dimen/padding_size_xl"
            android:text="@string/hs_pay"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/font_text_size_l"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager_cards"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/text_hs_pay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="7:4" />

        <ProgressBar
            android:id="@+id/loadingCircle"
            android:layout_width="@dimen/icon_common_size_l"
            android:layout_height="@dimen/icon_common_size_l"
            app:layout_constraintTop_toTopOf="@+id/pager_cards"
            app:layout_constraintBottom_toBottomOf="@+id/pager_cards"
            app:layout_constraintStart_toStartOf="@+id/pager_cards"
            app:layout_constraintEnd_toEndOf="@+id/pager_cards"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_wallet_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/md_grey_100"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/pager_cards"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
